<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailKegiatan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkOrange"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/DodgerBlue"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Detail Kegiatan"
                android:textColor="@color/White"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/editNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:hint="Nama Agenda" />

            <EditText
                android:id="@+id/editCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/White"
                android:textColor="@color/White"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="Pilih Tanggal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/editMulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:focusable="false"
                    android:hint="Waktu Mulai"
                    android:layout_alignParentStart="true"/>

                <EditText
                    android:id="@+id/editAkhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:focusable="false"
                    android:hint="Waktu Selesai"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/White"
                    android:gravity="center_horizontal"
                    android:text="Jenis Agenda"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerAgenda"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/White"
                    android:text="Jabatan Client Anda"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerJabatan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/White"
                    android:text="Jarak Agenda Anda"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerJarak"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/White"
                    android:text="Status Pertemuan"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/White"
                    android:text="Absensi untuk Kantor"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerAbsensi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_marginTop="10dp"
                android:text="Tambah Pengingat"
                android:id="@+id/cb_set_reminder"
                android:layout_gravity="center_horizontal"
                android:textColorHighlight="@color/White"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@color/White"
                android:padding="5dp"
                android:text="Simpan"
                android:textColor="@color/hitam" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
